{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "composer install --no-dev --optimize-autoloader",
    "nixpacksConfig": {
      "phases": {
        "setup": {
          "nixPkgs": ["php84", "php84Packages.composer"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "php artisan serve --host=0.0.0.0 --port=${PORT}",
    "healthcheckPath": "/"
  }
}